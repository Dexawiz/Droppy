<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="700.0" minWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.droppy.controller.SaveProductController">
      <HBox prefHeight="100.0" prefWidth="200.0">
            <HBox alignment="CENTER" minHeight="90.0" minWidth="110.0">
                  <Button fx:id="backtoCompanyButton" mnemonicParsing="false" onAction="#onBackToCompanyButtonClick" prefHeight="35.0" prefWidth="50.0" text="&lt;-">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Button>
            </HBox>
            <Label fx:id="productLabel" text="Product">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <HBox.margin>
                  <Insets top="50.0" />
               </HBox.margin>
            </Label>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox>
                  <TextField fx:id="nameProductTextField" minHeight="35.0" minWidth="680.0" promptText="Name of the product" VBox.vgrow="ALWAYS" />
                  <TextArea fx:id="descProductTextField" minHeight="250.0" minWidth="680.0" promptText="Description of the product" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextArea>
                  <HBox VBox.vgrow="ALWAYS">
                        <TextField fx:id="priceProductTextField" minHeight="35.0" minWidth="620.0" promptText="Price of the procuct" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Label fx:id="EURLabel" text="EUR">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="20.0" top="15.0" />
                           </HBox.margin>
                        </Label>
                  </HBox>
                  <HBox VBox.vgrow="ALWAYS" />
            </VBox>
      </HBox>
      <HBox alignment="TOP_RIGHT" spacing="40.0" VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
                  <Button fx:id="deleteProductButton" alignment="CENTER" mnemonicParsing="false" onAction="#onDeleteProductButtonClick" prefHeight="35.0" prefWidth="110.0" text="Delete">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Button>
               <padding>
                  <Insets left="60.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER">
               <HBox.margin>
                  <Insets right="110.0" />
               </HBox.margin>
                  <Button fx:id="saveProductButton" mnemonicParsing="false" onAction="#onSaveProductButtonClick" prefHeight="35.0" prefWidth="110.0" text="Save">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Button>
            </VBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
</VBox>
