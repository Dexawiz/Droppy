<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.droppy.controller.LoginController">
      <VBox alignment="CENTER" prefHeight="700.0" prefWidth="900.0">
            <Text fx:id="loginText" strokeType="OUTSIDE" strokeWidth="0.0" text="Log in">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <TextField fx:id="emailTextField" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="E-mail">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </TextField>
      <PasswordField fx:id="passwordTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="Password">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </PasswordField>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="35.0" prefWidth="300.0" text="Log in">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
            <Text fx:id="noAccountText" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't you have an account?">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <Button fx:id="signinButton" alignment="CENTER" mnemonicParsing="false" onAction="#onSigninButtonClick" prefHeight="35.0" prefWidth="300.0" text="Sign in">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>

      </VBox>
</VBox>
